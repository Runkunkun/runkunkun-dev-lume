<div class="flex flex-row items-center justify-start space-x-5 md:text-base text-xs w-full">
    <image src={{picture}} class="md:w-12 w-8 rounded-full"/>
    <div class="flex flex-col items-start justify-start w-full space-y-2">
        <p>{{workplace}}</p>
        <p class="text-slate-400 md:text-sm">{{job}}</p>
    </div>
    <div class="flex flex-col items-start justify-start w-full space-y-2">
        <p>{{start}} - {{end}}</p>
        <p class="text-slate-400 md:text-sm">{{duration}}</p>
    </div>
</div>